@page
@model ShortVideoCreator.Razor.FrontEnd.Pages.UploadContent.UploadContentModel

@{
    ViewData["Title"] = "UploadContent";
}

<h1>Upload Content File</h1>

<p>PDF file alone</p>


<form enctype="multipart/form-data" method="post">
    <dl>
        <dt>
            <label asp-for="UploadContent.FormFiles"></label>
        </dt>
        <dd>
            <input asp-for="UploadContent.FormFiles" type="file" multiple />
            <span asp-validation-for="UploadContent.FormFiles"></span>
        </dd>
    </dl>
    <input asp-page-handler="Upload" class="btn" type="submit" value="Upload" />
</form>

<p class="result">
    @Model.Result
</p>